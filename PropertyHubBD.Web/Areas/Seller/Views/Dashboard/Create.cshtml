@model PropertyHubBD.Web.Models.Property

@{
    ViewData["Title"] = "Add Property";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Add New Property</h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="AreaSize" class="form-label">Area Size</label>
                    <input asp-for="AreaSize" class="form-control" type="number" step="0.01" value="1000" />
                </div>
                <div class="mb-3">
                    <label asp-for="AreaUnit" class="form-label">Area Unit</label>
                    <select asp-for="AreaUnit" class="form-control">
                        <option value="SqFt">Square Feet</option>
                        <option value="Decimal">Decimal</option>
                        <option value="Katha">Katha</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="PropertyType" class="form-label">Property Type</label>
                    <select asp-for="PropertyType" class="form-control">
                        <option value="Flat">Flat/Apartment</option>
                        <option value="Plot">Plot/Land</option>
                        <option value="Floor">Floor</option>
                        <option value="House">House</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Status</label>
                    <select asp-for="Status" class="form-control">
                        <option value="Available">Available</option>
                        <option value="Pending">Pending</option>
                        <option value="Sold">Sold</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="DivisionId" class="form-label">Division</label>
                    <select asp-for="DivisionId" class="form-control" asp-items="@((SelectList)ViewData["DivisionId"])">
                        <option value="">-- Select Division --</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="DistrictId" class="form-label">District</label>
                    <select asp-for="DistrictId" class="form-control">
                        <option value="">-- Select District --</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="UpazillaId" class="form-label">Upazilla</label>
                    <select asp-for="UpazillaId" class="form-control">
                        <option value="">-- Select Upazilla --</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Images</label>
                    <input type="file" name="images" class="form-control" multiple />
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit Property</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            var districtSelect = $('#DistrictId');
            var upazillaSelect = $('#UpazillaId');
            
            // Clear dropdowns initially
            function resetDistrict() {
                districtSelect.empty().append('<option value="">-- Select District --</option>');
                resetUpazilla();
            }
            
            function resetUpazilla() {
                upazillaSelect.empty().append('<option value="">-- Select Upazilla --</option>');
            }

            $('#DivisionId').change(function() {
                var divisionId = $(this).val();
                resetDistrict();
                
                if (divisionId) {
                    $.getJSON('/api/Locations/GetDistricts/' + divisionId, function(data) {
                        $.each(data, function(i, item) {
                            districtSelect.append($('<option></option>').val(item.id).html(item.name));
                        });
                    });
                }
            });
            
            $('#DistrictId').change(function() {
                var districtId = $(this).val();
                resetUpazilla();
                
                if (districtId) {
                    $.getJSON('/api/Locations/GetUpazillas/' + districtId, function(data) {
                        $.each(data, function(i, item) {
                            upazillaSelect.append($('<option></option>').val(item.id).html(item.name));
                        });
                    });
                }
            });
        });
    </script>
}
