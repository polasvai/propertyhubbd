@model PropertyHubBD.Web.Models.Property

@{
    ViewData["Title"] = "Delete Property";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Delete Property</h2>
    <div class="alert alert-danger">Are you sure you want to delete this property?</div>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Price.ToString("C")</p>
            <p class="card-text">@Model.Address</p>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
