@model List<PropertyHubBD.Web.Models.Property>

@{
    ViewData["Title"] = "Manage Properties";
}

<!-- Display TempData messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <i class="icon fas fa-check"></i> @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <i class="icon fas fa-ban"></i> @TempData["Error"]
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-building mr-2"></i>
                    All Properties
                </h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm mr-2">
                        <i class="fas fa-plus"></i> Add Property
                    </a>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="propertiesTable" class="table table-bordered table-striped data-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Seller</th>
                            <th>Location</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <strong>@item.Title</strong><br />
                                    <small class="text-muted">@item.PropertyType</small>
                                </td>
                                <td>
                                    @if (item.Seller != null)
                                    {
                                        <span>@(item.Seller.FullName ?? item.Seller.UserName)</span><br />
                                        <small class="text-muted">@item.Seller.Email</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Division != null)
                                    {
                                        <i class="fas fa-map-marker-alt text-danger"></i> @item.Division.Name
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    <strong>à§³@item.Price.ToString("N0")</strong>
                                </td>
                                <td>
                                    @if (item.IsApproved)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check"></i> Approved
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">
                                            <i class="fas fa-clock"></i> Pending
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small>@item.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td class="text-nowrap">
                                    @if (ViewBag.IsSuperAdmin)
                                    {
                                        @if (!item.IsApproved)
                                        {
                                            <form asp-action="ApproveProperty" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                    }
                                    <a asp-area="" asp-controller="Property" asp-action="Details" asp-route-id="@item.Id" 
                                       class="btn btn-sm btn-info" title="View Details" target="_blank">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (ViewBag.CurrentUser != null && ViewBag.CurrentUser.CanEditProperty)
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    }
                                    @if (ViewBag.IsSuperAdmin)
                                    {
                                        <form asp-action="DeleteProperty" method="post" class="d-inline" 
                                              data-confirm="Are you sure you want to delete this property?">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Seller</th>
                            <th>Location</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

@section Scripts {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#propertiesTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "pageLength": 25,
                "order": [[0, "desc"]],
                "columnDefs": [
                    { "orderable": false, "targets": 7 }
                ]
            });

            // Confirmation for delete
            $('form[data-confirm]').on('submit', function(e) {
                const message = $(this).data('confirm');
                if (!confirm(message)) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
}
