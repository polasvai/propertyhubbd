@model PropertyHubBD.Web.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Admin Dashboard</h2>
    
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text display-4">@Model.TotalUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Properties</h5>
                    <p class="card-text display-4">@Model.TotalProperties</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark mb-3">
                <div class="card-body">
                    <h5 class="card-title">Pending Approval</h5>
                    <p class="card-text display-4">@Model.PendingProperties</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white mb-3">
                <div class="card-body">
                    <h5 class="card-title">Divisions</h5>
                    <p class="card-text display-4">@Model.TotalDivisions</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h4>Quick Actions</h4>
        <a asp-action="Properties" class="btn btn-outline-primary">Manage Properties</a>
        <a asp-action="Users" class="btn btn-outline-secondary">Manage Users</a>
    </div>
</div>
