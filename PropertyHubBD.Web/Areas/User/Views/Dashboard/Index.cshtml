@model List<PropertyHubBD.Web.Models.Property>

@{
    ViewData["Title"] = "My Saved Properties";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>My Saved Properties</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="@item.Title">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-muted">@item.District?.Name, @item.Division?.Name</p>
                        <p class="card-text fw-bold">@item.Price.ToString("C")</p>
                        <div class="d-flex justify-content-between">
                            <a asp-area="" asp-controller="Property" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">View</a>
                            <form asp-action="RemoveProperty" method="post">
                                <input type="hidden" name="propertyId" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info">You haven't saved any properties yet.</div>
            </div>
        }
    </div>
</div>
