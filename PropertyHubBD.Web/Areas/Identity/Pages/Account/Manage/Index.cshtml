@page
@using PropertyHubBD.Web.Models
@using PropertyHubBD.Web.Areas.Identity.Pages.Account.Manage
@inject UserManager<ApplicationUser> UserManager
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = "Index"; // This might require _ManageNav override if not using default
    // We'll rely on default layout, hoping it picks up. If not, we might need a _Layout.
    // Actually, usually we need _Layout.cshtml in Account/Manage or Account/ to set the layout to the main app layout.
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" model="Model.StatusMessage" />

@{
    var user = await UserManager.GetUserAsync(User);
    var profilePic = user.ProfilePictureUrl ?? "/images/default-avatar.png";
}

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <div class="card mb-3">
                 <div class="card-body text-center">
                     <img src="@profilePic" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="Profile Picture">
                     <div class="form-group">
                         <label asp-for="Input.ProfilePicture" class="form-label"></label>
                         <input asp-for="Input.ProfilePicture" class="form-control" type="file" accept="image/*" />
                         <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                     </div>
                 </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FullName" class="form-control" placeholder="Full Name" />
                <label asp-for="Input.FullName" class="form-label"></label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="Input.Gender" class="form-select">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <label asp-for="Input.Gender" class="form-label"></label>
                    </div>
                </div>
                <div class="col-md-6">
                     <div class="form-floating">
                        <input asp-for="Input.Age" class="form-control" placeholder="Age" min="10" max="120" />
                        <label asp-for="Input.Age" class="form-label"></label>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Occupation" class="form-control" placeholder="Occupation" />
                <label asp-for="Input.Occupation" class="form-label"></label>
                <span asp-validation-for="Input.Occupation" class="text-danger"></span>
            </div>
             <div class="form-floating mb-3">
                <textarea asp-for="Input.Bio" class="form-control" placeholder="Bio" style="height: 100px"></textarea>
                <label asp-for="Input.Bio" class="form-label"></label>
                <span asp-validation-for="Input.Bio" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
