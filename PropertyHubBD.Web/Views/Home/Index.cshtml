@model PropertyHubBD.Web.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h3 class="display-4">Welcome to PropertyHubBD</h3>
    <p class="lead">Find your dream property in Bangladesh</p>
</div>

<div class="container">
    <!-- Search Bar -->
    <div class="row mb-5">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Index" method="get">
                <div class="input-group input-group-lg">
                    <input type="text" name="search" class="form-control" placeholder="Search by property title, location..." value="@Model.SearchTerm">
                    <if condition="Model.SelectedDivisionId.HasValue">
                        <input type="hidden" name="divisionId" value="@Model.SelectedDivisionId" />
                    </if>
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Division Buttons -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h3 class="mb-4">Browse by Division</h3>
            <div class="d-flex flex-wrap justify-content-center gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary @(!Model.SelectedDivisionId.HasValue ? "active" : "")">All</a>
                @foreach (var division in Model.Divisions)
                {
                    <a asp-action="Index" asp-route-divisionId="@division.Id" 
                       class="btn btn-outline-primary @(Model.SelectedDivisionId == division.Id ? "active" : "")"
                       style="border-color: @(division.Color ?? "#007bff"); color: @(Model.SelectedDivisionId == division.Id ? "#fff" : (division.Color ?? "#007bff")); background-color: @(Model.SelectedDivisionId == division.Id ? (division.Color ?? "#007bff") : "transparent");">
                        @division.Name
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Property List -->
    <div class="row">
        <div class="col-12">
            <h3 class="mb-4">
                @(Model.SelectedDivisionId.HasValue 
                    ? $"Properties in {Model.Divisions.FirstOrDefault(d => d.Id == Model.SelectedDivisionId)?.Name}" 
                    : "Recently Added Properties")
            </h3>
        </div>
        
        @if (!Model.Properties.Any())
        {
            <div class="col-12 text-center py-5">
                <div class="alert alert-info">
                    No properties found matching your criteria.
                </div>
            </div>
        }
        else
        {
            @foreach (var property in Model.Properties)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Property Image -->
                        <div style="height: 200px; overflow: hidden; background-color: #f8f9fa;" class="d-flex align-items-center justify-content-center">
                            @if (property.Images != null && property.Images.Any())
                            {
                                <img src="@property.Images.First().ImageUrl" class="card-img-top" alt="@property.Title" style="object-fit: cover; height: 100%; width: 100%;">
                            }
                            else
                            {
                                <div class="text-muted"><i class="fas fa-home fa-3x"></i></div>
                            }
                        </div>
                        
                        <div class="card-body">
                            <h5 class="card-title text-truncate" title="@property.Title">@property.Title</h5>
                            <h6 class="card-subtitle mb-2 text-primary fw-bold">৳ @property.Price.ToString("N0")</h6>
                            <p class="card-text small text-muted mb-2">
                                <i class="fas fa-map-marker-alt me-1"></i> 
                                @property.Upazilla?.Name, @property.District?.Name
                            </p>
                            <div class="d-flex justify-content-between align-items-center small">
                                <span><i class="fas fa-ruler-combined me-1"></i> @property.AreaSize @property.AreaUnit</span>
                                <span class="badge bg-secondary">@property.PropertyType</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <a asp-controller="Property" asp-action="Details" asp-route-id="@property.Id" class="btn btn-outline-primary w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .gap-2 { gap: 0.5rem; }
</style>
