@model List<PropertyHubBD.Web.Models.Property>

@{
    ViewData["Title"] = "Search Results";
}

<div class="container mt-4">
    <h2>Search Results</h2>
    <p class="text-muted">Found @Model.Count properties</p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="@item.Title">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-muted">@item.District?.Name, @item.Division?.Name</p>
                        <p class="card-text fw-bold">@item.Price.ToString("C")</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-warning">No properties found matching your search.</div>
            </div>
        }
    </div>
</div>
