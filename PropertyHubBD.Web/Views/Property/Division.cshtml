@model PropertyHubBD.Web.Models.DivisionPropertiesViewModel

@{
    ViewData["Title"] = Model.Division.Name + " Division";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Division.Name</li>
        </ol>
    </nav>

    <h2 class="mb-4">@Model.Division.Name Division</h2>

    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    Districts
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var district in Model.Division.Districts)
                    {
                        <li class="list-group-item">
                            <a href="#">@district.Name</a> <!-- Link to District action later -->
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <h4>Available Properties (@Model.Properties.Count)</h4>
            <div class="row">
                @foreach (var item in Model.Properties)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <!-- Image Placeholder -->
                            <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="@item.Title">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text text-muted">@item.District.Name, @item.Division.Name</p>
                                <p class="card-text">@item.Price.ToString("C")</p>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.Properties.Any())
                {
                    <div class="col-12">
                        <div class="alert alert-info">No properties found in this division.</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
